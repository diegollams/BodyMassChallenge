.container
  %h1 Body Mass Index History
  = link_to 'New Body Mass index', root_path , class: 'btn btn-primary'

  %table.table
    %thead
      %tr
        %th Date
        %th Height
        %th Weight
        %th Body mass
        %th Category
        %td

    %tbody
      - current_user.body_mass_histories.each do |body_mass_history|
        %tr
          %td
            %b= body_mass_history.created_at.strftime("%F")
          %td
            %b= "#{body_mass_history.height} m"
          %td
            %b= "#{body_mass_history.weight} kg"
          %td
            %b
              = number_with_precision( body_mass_history.body_mass, :precision => 2)
              Kg/m<sup>2</sup>
          %td
            %b= body_mass_history.category
          %td
            = link_to 'Destroy', "body_mass_histories/#{body_mass_history.id}", method: :delete, data: {confirm: 'Are you certain you want to delete this?'}, class: 'btn btn-danger'

  %br
  = paginate @body_mass_histories, theme: 'twitter-bootstrap-3'
